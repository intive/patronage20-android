<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="hvacViewModel"
                  type="com.intive.patronage.smarthome.feature.hvac.HvacViewModel"/>
    </data>

    <LinearLayout
            android:background="@color/backgroundColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.intive.patronage.smarthome.feature.hvac.HvacCircle
                android:layout_width="@dimen/none"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:id="@+id/hvac_circle"
                app:onLayout="@{hvacViewModel}"
                app:setTemperature="@{hvacViewModel}"
        />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="@dimen/none"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/tempButtonLayout">
            
            <Button
                    android:text="@string/apply"
                    android:onClick="@{()->hvacViewModel.saveSettings()}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tempApplyButton"
                    android:background="@drawable/rounded_button"
                    android:textColor="@color/backgroundColor"
                    app:layout_constraintEnd_toEndOf="@+id/tempReset" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="80dp"/>
            <Button
                    android:text="@string/reset"
                    android:onClick="@{()->hvacViewModel.resetSetting()}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tempReset"
                    android:background="@drawable/rounded_button"
                    android:textColor="@color/backgroundColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/tempApplyButton"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>