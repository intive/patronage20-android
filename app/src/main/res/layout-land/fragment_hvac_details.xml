<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="hvacViewModel"
                  type="com.intive.patronage.smarthome.feature.hvac.HvacViewModel"/>
    </data>

    <LinearLayout
            android:background="@color/backgroundColor"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.intive.patronage.smarthome.feature.hvac.HvacCircle
                android:layout_width="@dimen/none"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:id="@+id/hvac_circle"
                app:onLayout="@{hvacViewModel}"
        />
        <LinearLayout android:layout_width="@dimen/none" android:layout_height="match_parent" android:layout_weight="7"
                      android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/none"
                    android:layout_weight="1"
                    android:id="@+id/tempButtonLayout">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:textSize="@dimen/hvac_text_size"
                        android:text="@string/hvac_details_temp_label"
                        android:textColor="#fff"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:id="@+id/tempLabel"/>

                <EditText
                        app:textChangeListener="@{hvacViewModel}"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/hvac_text_size"
                        android:text=""
                        android:inputType="number"
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:hint="@string/hvac_datails_hint"
                        android:layout_marginBottom="-13dp"
                        android:layout_marginTop="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/tampValueEditView"
                        app:layout_constraintStart_toEndOf="@+id/tempLabel"
                        android:layout_marginStart="@dimen/hvac_layout_margin" android:textIsSelectable="false" android:singleLine="false"
                        android:importantForAutofill="no"/>
                <Button
                        android:text="@string/apply"
                        app:tempUp="@{hvacViewModel}"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/tempApplyButton"
                        android:background="@drawable/rounded_button"
                        android:textColor="@color/backgroundColor" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/tempReset" android:layout_marginEnd="@dimen/hvac_layout_margin"/>
                <Button
                        android:text="@string/reset"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/hvac_layout_margin"
                        android:id="@+id/tempReset"
                        android:background="@drawable/rounded_button"
                        android:textColor="@color/backgroundColor"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/none"
                    android:layout_weight="10"
            />
        </LinearLayout>


    </LinearLayout>

</layout>