<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor"
    android:layout_margin="@dimen/standard_break"
    tools:context=".feature.temperature.view.TemperatureDetailsFragment">

    <com.intive.patronage.smarthome.feature.temperature.view.GraphView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonsLayout"
        android:layout_width="@dimen/none"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/standard_break"
        android:id="@+id/graphView" />

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="7"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/buttonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:enabled="true"
            android:textColor="@color/time_stamp_button_text"
            android:background="@drawable/time_stamp_button_background"
            android:layout_weight="1"
            android:id="@+id/btn1"
            android:text="@string/graph_1_min"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/none"/>

        <Button
            android:enabled="true"
            android:textColor="@color/time_stamp_button_text"
            android:background="@drawable/time_stamp_button_background"
            android:layout_weight="1"
            android:id="@+id/btn2"
            android:text="@string/graph_30_min"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/none"/>

        <Button
            android:enabled="false"
            android:textColor="@color/time_stamp_button_text"
            android:background="@drawable/time_stamp_button_background"
            android:layout_weight="1"
            android:id="@+id/btn3"
            android:text="@string/graph_1_h"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/none"/>

        <Button
            android:enabled="true"
            android:textColor="@color/time_stamp_button_text"
            android:background="@drawable/time_stamp_button_background"
            android:layout_weight="1"
            android:id="@+id/btn4"
            android:text="@string/graph_12_h"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/none"/>

        <Button
            android:enabled="true"
            android:textColor="@color/time_stamp_button_text"
            android:background="@drawable/time_stamp_button_background"
            android:layout_weight="1"
            android:id="@+id/btn5"
            android:text="@string/graph_1_d"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/none"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>