<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="com.intive.patronage.smarthome.feature.login.LoginActivity">

    <ImageView
        android:transitionName="logo_transition"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/applicationLogo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/logo"
        app:srcCompat="@drawable/logo"/>

    <LinearLayout
        android:id="@+id/loginCard"
        android:gravity="center"
        android:orientation="vertical"
        android:elevation="8dp"
        android:background="@drawable/rounded_login_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="300dp"
        android:layout_height="350dp">

        <com.google.android.material.textfield.TextInputLayout
            app:hintEnabled="false"
            android:hint="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/email"
                android:textSize="16sp"
                android:textColor="@color/loginScreenMainColor"
                android:hint="Email"
                android:padding="8dp"
                android:background="@drawable/rounded_with_stroke"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:layout_width="250dp"
                android:layout_height="50dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="25dp"
            app:hintEnabled="false"
            android:hint="@string/app_name"
            app:passwordToggleEnabled="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/password"
                android:textSize="16sp"
                android:textColor="@color/loginScreenMainColor"
                android:hint="Password"
                android:padding="8dp"
                android:background="@drawable/rounded_with_stroke"
                android:inputType="textPassword"
                android:maxLines="1"
                android:layout_width="250dp"
                android:layout_height="50dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_marginTop="25dp"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:elevation="8dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/colorPrimary"
            android:text="Sign In"
            android:id="@+id/signIn"
            android:layout_width="250dp"
            android:layout_height="50dp"/>

        <TextView
            android:textSize="16sp"
            android:textColor="@color/loginScreenMainColor"
            android:gravity="center"
            android:text="or"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

        <Button
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:drawableStart="@drawable/google_icon"
            android:elevation="8dp"
            android:background="@drawable/sign_in_button"
            android:text="Sign in with Google"
            android:id="@+id/signInWithGoogle"
            android:layout_width="250dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/applicationLogo"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginInfo"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:textColor="@color/loginScreenMainColor"
            android:text="Don't have an account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="25dp"
            android:textSize="24sp"
            android:textColor="@color/loginScreenMainColor"
            android:text="Sign Up"
            android:id="@+id/signUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
