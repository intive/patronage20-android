<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_sensor_background"
    android:padding="20dp">

    <TextView
        android:id="@+id/dialogSensorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:width="@dimen/dialog_sensor_text_width"
        android:text="@string/placeholder"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="@dimen/dashboard_details_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dialogSensorImage"
        android:layout_width="@dimen/dialog_sensor_image_size"
        android:layout_height="@dimen/dialog_sensor_image_size"
        android:layout_marginEnd="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/check" />
</androidx.constraintlayout.widget.ConstraintLayout>