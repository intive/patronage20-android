<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="hvacViewModel"
                  type="com.intive.patronage.smarthome.feature.hvac.HvacViewModel"/>
    </data>

    <LinearLayout
            android:background="@color/backgroundColor"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

        <com.intive.patronage.smarthome.feature.hvac.HvacCircle
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:id="@+id/hvac_circle"
                app:onLayout="@{hvacViewModel}"
                />
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/none"
                android:layout_weight="1.5"
                android:id="@+id/tempButtonLayout">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:text="Set Temp:"
                    android:textColor="#fff"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:id="@+id/tempLabel"/>

            <EditText
                    app:textChangeListener="@{hvacViewModel}"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:text=""
                    android:inputType="number"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:hint="..."
                    android:layout_marginBottom="-8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/tampValueEditView"
                    app:layout_constraintStart_toEndOf="@+id/tempLabel"
                    android:layout_marginStart="5dp" android:textIsSelectable="false" android:singleLine="false"/>
            <Button
                    android:text="@string/apply"
                    app:tempUp="@{hvacViewModel}"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/tempApplyButton"
                    android:background="@drawable/rounded_button"
                    android:textColor="@color/backgroundColor" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tempReset" android:layout_marginEnd="5dp"/>
            <Button
                    android:text="@string/reset"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/tempReset"
                    android:background="@drawable/rounded_button"
                    android:textColor="@color/backgroundColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
        />


    </LinearLayout>

</layout>