<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="lightDetailsViewModel"
            type="com.intive.patronage.smarthome.viewmodel.LightsDetailsViewModel" />
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#2e2d32"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:weightSum="14"
        tools:context=".view.LightsDetailsFragment">

        <View
            android:background="@color/colorPrimary"
            android:id="@+id/colorView"
            android:layout_weight="7"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/red"
                android:textColor="#fff"
                android:id="@+id/redTextView"
                android:layout_alignParentStart="true"
                android:layout_width="64dp"
                android:layout_height="match_parent"/>

            <SeekBar
                android:progress="4"
                android:max="255"
                android:layout_toEndOf="@+id/redTextView"
                android:layout_toStartOf="@id/redValueTextView"
                android:id="@+id/redSeekBar"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@{Integer.toString(lightDetailsViewModel.redValue)}"
                android:textColor="#fff"
                android:id="@+id/redValueTextView"
                android:layout_alignParentEnd="true"
                android:layout_width="64dp"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/green"
                android:textColor="#fff"
                android:id="@+id/greenTextView"
                android:layout_alignParentStart="true"
                android:layout_width="64dp"
                android:layout_height="match_parent"/>

            <SeekBar
                android:progress="138"
                android:max="255"
                android:layout_toEndOf="@+id/greenTextView"
                android:layout_toStartOf="@id/greenValueTextView"
                android:id="@+id/greenSeekBar"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@{Integer.toString(lightDetailsViewModel.greenValue)}"
                android:textColor="#fff"
                android:id="@+id/greenValueTextView"
                android:layout_alignParentEnd="true"
                android:layout_width="64dp"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/blue"
                android:textColor="#fff"
                android:id="@+id/blueTextView"
                android:layout_alignParentStart="true"
                android:layout_width="64dp"
                android:layout_height="match_parent"/>

            <SeekBar
                android:progress="191"
                android:max="255"
                android:layout_toEndOf="@+id/blueTextView"
                android:layout_toStartOf="@id/blueValueTextView"
                android:id="@+id/blueSeekBar"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:padding="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@{Integer.toString(lightDetailsViewModel.blueValue)}"
                android:textColor="#fff"
                android:id="@+id/blueValueTextView"
                android:layout_alignParentEnd="true"
                android:layout_width="64dp"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:layout_margin="4dp"
                android:background="@drawable/ok_button"
                android:text="@string/ok"
                android:textColor="#2e2d32"
                android:id="@+id/okButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <Button
                android:layout_margin="4dp"
                android:background="#00000000"
                android:layout_marginEnd="16dp"
                android:text="@string/cancel"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/okButton"
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>